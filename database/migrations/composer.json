{
    "name": "cs2-prediction/database-migrations",
    "description": "Unified PHP Database migrations for CS2 Match Prediction System - PostgreSQL and ClickHouse",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "byjg/migration": "^4.9",
        "doctrine/dbal": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "CS2Prediction\\DatabaseMigrations\\": "src/"
        }
    },
    "scripts": {
        "migrate:postgres": "php bin/migrate.php postgres",
        "migrate:clickhouse": "php bin/migrate.php clickhouse",
        "migrate:status:postgres": "php bin/migrate.php postgres --status",
        "migrate:status:clickhouse": "php bin/migrate.php clickhouse --status",
        "migrate:create:postgres": "php bin/migrate.php postgres --create",
        "migrate:create:clickhouse": "php bin/migrate.php clickhouse --create",
        "migrate:reset:postgres": "php bin/migrate.php postgres --reset",
        "migrate:reset:clickhouse": "php bin/migrate.php clickhouse --reset"
    },
    "config": {
        "sort-packages": true
    }
} 